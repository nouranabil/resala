<% content_for :javascripts do %>
  <%= javascript_include_tag "tinymce/jquery.tinymce" %>
  <script type="text/javascript">

    $().ready(function() {
      $('textarea.tinymce').tinymce({
        script_url : '/javascripts/tinymce/tiny_mce.js',
        theme : "advanced",
        theme_advanced_buttons1 : "bold,italic,underline,|,bullist,numlist,|,link,unlink,|,formatselect",
        theme_advanced_buttons2 : "",
        theme_advanced_toolbar_location : "top",
        theme_advanced_toolbar_align : "center",
        theme_advanced_resizing : true,
        content_css : "/stylesheets/tinymce/content.css",
        directionality : "rtl"
      });
    });
  </script>
<% end %>
