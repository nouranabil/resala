<div class="grid_16">
  <h2 id="page-heading">عرض بيانات الفرع</h2>
</div>

<div class="grid_16">
  <div class="box">
    <h2><%= @branch.name%></h2>
      <div class="block list_show">
        <dl>
          <% if @branch.description%>
          <dt><%= t('activerecord.attributes.branch.description')%>:</dt>
          <dd>
            <p><%= @branch.description.html_safe%></p>
          </dd>
          <% end %>
          <% if @branch.address%>
            <dt><%= t('activerecord.attributes.branch.address')%>:</dt>
            <dd><%= @branch.address.html_safe%></dd>
          <% end %>
          <% if @branch.phones%>
            <dt><%= t('activerecord.attributes.branch.phones')%>:</dt>
            <dd dir="ltr"><%= @branch.phones.html_safe%></dd>
          <% end %>
          <% if @branch.city%>
            <dt><%= t('activerecord.attributes.branch.city')%>:</dt>
            <dd><%= @branch.city.name.html_safe%></dd>
          <% end %>
        </dl>
      </div>
    </div>  
</div>
